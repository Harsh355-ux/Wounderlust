<!-- show.ejs -->
<% layout("/layouts/boilerplate") %>
<div class="row mt-3">
  <div class="col-8 offset-3">
    <h3><%= listing.title %></h3>
  </div>
  <div class="card col-6 offset-3 show-card listing-card">
    <img
      src="<%= listing.image.url %>"
      class="card-img-top show-img"
      alt="listing_image"
    />
    <div class="card-body">
      <p class="card-text">
        <%= listing.description %> <br />
        &#8377; <%= listing.price.toLocaleString("en-IN") %> <br />
        <%= listing.location %> <br />
        <%= listing.country %>
      </p>
    </div>

    <div class="btns">
      <a
        href="/listings/<%= listing._id%>/edit"
        class="btn btn-dark col-md-2 add-btn"
        >Edit</a
      >
      <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
        <button class="btn btn-dark offset-8">Delete</button>
      </form>
    </div>
  </div>
  <div class="col-8 offset-3 mb-3">
    <hr />
    <h4>Leave a Review</h4>
    <form action="/listings/<%= listing.id %>/review" method="POST" novalidate class="needs-validation">
      <div class="mb-3 mt-3">
        <label for="rating" class="form-lable">Rating</label>
        <input
          type="range"
          min="1"
          max="5"
          id="rating"
          name="reviews[rating]"
          class="form-range"
        />
      </div>
      <div class="mb-3 mt-3">
        <label for="comment" class="form-lable">Comment</label>
        <textarea
          name="reviews[comment]"
          id="comment"
          cols="30"
          rows="5"
          class="form-control"
          required
        ></textarea>
        <div class="invalid-feedback">
          Please submit some comment for review 
        </div>
      </div>
      <div>
        <button class="btn btn-outline-dark">Submit</button>
      </div>
    </form>

    <hr>

    <p><b>All Review</b></p>
    
    <div class="row">
 
    <% for(review of listing.reviews){ %>
      <div class="card col-5 ms-3 mb-3">
        <div class="card-body">
          <h5 class="card-title"> random name</h5>
          <p class="card-text"><%= review.comment %></p>
          <p class="card-text"><%= review.rating %>stars</p>
        </div>
       
      </div>
    <% } %>
    </div>
    
  </div>
</div>
